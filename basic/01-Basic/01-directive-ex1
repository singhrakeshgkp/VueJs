        <p> First Name :- {{firstName}} Last Name :- {{lastName}} </p>
        <!-- <p>Course :- {{course}}</p>  this will not work-->
        <p v-html="course"> </p> <!-- binding html example -->
        <h4 v-bind:id="id"> Binding html attributes v-bind:attribute name</h4>
        <button v-bind:disabled="isDisabled">V Bind example :- disable button</button>
        <p v-bind:class="isUnderline? textDecoration: undefined">V Bind :- apply css class </p>
        <h4></h4>
    </div>
</body>

<script>
    Vue.createApp(
        {
            data() {
                return {
                    firstName: 'rakesh',
                    lastName: 'singh',
                    course: '<b> VueJs Tutorial </b>',
                    id: 'course',
                    isDisabled: true,
                    textDecoration: 'underline',
                    isUnderline: false
                };
            }
        }
    ).mount('#root');
</script>

<style>
    .underline {
        text-decoration: underline;
    }
</style>

